<%= order_form.fields_for :line_items, line_item do |line_item_fields| %>
  <tr>
    <td class="col-xs-2">
      <% unless params[:state] == "confirm" %>
        <%= link_to potepan_line_item_path(line_item), class: "close", method: :delete  do %>
          <span aria-hidden="true">&times;</span>
        <% end %>
      <% end %>
      <span class="cartImage">
        <%= image_tag(line_item.variant.display_image.attachment(:small)) %>
      </span>
    </td>
    <td class="col-xs-4">
      <%= line_item.name %>
    </td>
    <td class="col-xs-2">
      <%= line_item.display_price %>
    </td>
    <td class="col-xs-2">
      <% if params[:state] == "confirm" %>
        <%= line_item.quantity %>
      <% else %>
        <%= line_item_fields.number_field :quantity, min: 0 %>
      <% end %>
    </td>
    <td class="col-xs-2">
      <%= line_item.display_total %>
    </td>
  </tr>
<% end %>
